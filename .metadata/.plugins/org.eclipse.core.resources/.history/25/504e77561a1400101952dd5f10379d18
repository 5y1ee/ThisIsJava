package ch07.sec02;

public class SmartPhoneExample {

	public static void main(String[] args) {
		
		var s23 = new SmartPhone("Galaxy", "Black");
		
		s23.bell();
		s23.sendVoice();
		s23.receiveVoice();
		s23.hangUp();
		
		s23.setWifi(true);
		s23.internet();
		
		
		// 자동형변환
		Phone p1 = new SmartPhone("d", "f");
		
		// 강제형변환
		SmartPhone p2 = (SmartPhone)p1;
		p2.internet(); // 사용가능
		
		
		Phone p3 = new Phone();
		SmartPhone p4 = (SmartPhone)p3;
		p4.internet();
		
		
	}

}
